			            	sh ''' set +x
			            		security -v unlock-keychain -p "$PSWD"
			            	'''
			            }
		            	
		            	if (GIT_BRANCH == 'HEAD') {
                        	GIT_BRANCH == env.BRANCH_NAME
                   	 	}
		                
                   	 	sh "git config --local user.name 'Jenkins'"
                   	 	sh "git config --local user.email 'jenkins@ci.corp.evernym.com'"

